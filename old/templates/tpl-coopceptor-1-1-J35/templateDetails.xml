	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="groups-html"
					type="list"
					default=""
					label="TPL_STYLISH_METHODHTML_LABEL"
					description="TPL_STYLISH_METHODHTML_DESC">
						<option value="">Neutral (without design)</option>
						<option value="boostrap2-home">Boostrap V2.3.2 (Home)</option>
						<option value="boostrap2-component">Boostrap V2.3.2 (Component)</option>
						<option value="boostrap3-home">Boostrap V3.3.6 (Home)</option>
						<option value="boostrap3-component">Boostrap V3.3.6 (Component)</option>
						<option value="amp-home">AMP (Home)</option>
						<option value="amp-component">AMP (Component)</option>
						<option value="foundation-home">Foundation (Home)</option>
						<option value="foundation-component">Foundation (Component)</option>
						<option value="metroui-home">MetroUI (Home)</option>
						<option value="metroui-component">MetroUI (Component)</option>
				</field>
				<field name="groups-script"
					type="list"
					default="boostrap3"
					label="TPL_STYLISH_METHODSCRIPT_LABEL"
					description="TPL_STYLISH_METHODSCRIPT_DESC">
						<option value="boostrap2">Boostrap V2.3.2</option>
						<option value="boostrap3">Boostrap V3.3.6</option>
						<option value="amp">AMP</option>
						<option value="foundation">Foundation</option>
						<option value="metroui">MetroUI</option>
				</field>
				<field name="groups-method"
					type="list"
					default="production"
					label="TPL_STYLISH_METHODDESIGNER_LABEL"
					description="TPL_STYLISH_METHODDESIGNER_DESC">
						<option value="custom">TPL_STYLISH_METHODDESIGNER_OPTION_CUSTOM</option>
						<option value="production">TPL_STYLISH_METHODDESIGNER_OPTION_PROD</option>
				</field>
			</fieldset>
			<fieldset name="AMP-HTMLviews" label="AMP-HTML views">
				<field name="ampHTML"
					type="radio"
					class="btn-group btn-group-yesno"
					default=""
					label="AMP-HTML"
					description="TPL_STYLISH_AMPHTML_DESC">
						<option value="amp">JYes</option>
						<option value="">JNo</option>
				</field>
			</fieldset>
			<fieldset name="Hidding" label="Hidding support">
				<field name="Pages-js-default"
					type="radio"
					class="btn-group btn-group-yesno"
					default=""
					label="TPL_STYLISH_HIDEJSDEFAULT_LABEL"
					description="TPL_STYLISH_HIDEJSDEFAULT_DESC">
						<option value="">Keep default</option>
						<option value="home">home</option>
						<option value="component">Component</option>
				</field>
				<field name="ampHTMLbeta"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="not yet"
					description="TPL_STYLISH_XXXX_DESC">
						<option value="1">JYes</option>
						<option value="0">JNo</option>
				</field>
			</fieldset>
			<fieldset name="TPLStylish" label="Edit templates">
				<field name="logoFile" class="" type="media" default=""
					label="TPL_STYLISH_LOGO_LABEL"
					description="TPL_STYLISH_LOGO_LABEL" />
			</fieldset>
		</fields>
	</config>
